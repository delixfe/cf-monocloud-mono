#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_DIR=`cd $(dirname $0); cd ..; pwd`

# Mono Runtime
mkdir -p ${BUILD_DIR}/vendor/mono
echo "* Extract Mono Runtime v4.2.2.29"
curl -s https://buildpacks.dev.mdl.swisscom.ch/mono-4.2.2.29.tar.gz | tar xz -C ${BUILD_DIR}/vendor/mono/

# Start Script
echo "* Copy Startup Script"
cp ${BUILDPACK_DIR}/app/start ${BUILD_DIR}/start
